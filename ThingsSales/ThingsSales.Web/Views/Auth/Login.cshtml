@model ThingsSales.Model.Auth.Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThingsSales.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThingsSales.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container_auth">
        <div class="row justify-content-center mx-auto">
            <div class="col-md-4 mx-auto">
                <div class="card mt-5">
                    <div class="card-body">
                        <h2 class="card-title text-center">Authorization</h2>
                        <form asp-action="Login" asp-controller="Auth" method="post" class="needs-validation" novalidate="true">
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" name="Email" class="form-control" required="required" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" name="Password" type="password" class="form-control" required="required" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block mt-3">Authorize</button>
                        </form>
                        <p class="text-center mt-3">Don't have an account? <a href="/Auth/Register">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>