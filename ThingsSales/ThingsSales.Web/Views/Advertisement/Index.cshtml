@model ThingsSales.Service.ViewModels.AdvertisementViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="layer-photo-info">
        <div class="photo-item">
            <h2>Photo</h2>
            @foreach (var item in Model.Photos)
            {
                <img class="photos" src="data:image/jpeg;base64, @Convert.ToBase64String(item.ImageData)" alt="Item Photo" width="500" height="360" />
            }
        </div>
        <div class="info-item">
            <p class="time-item">@Model.Time</p>
            <h1>@Model.Name</h1>
            <p class="fs-2">@Model.Price грн.</p>
        </div>
    </div>
    <div class="layer-discription-city">
        <div class="discription-item">
            <h2>Description</h2>
            <p>@Model.Description</p>
        </div>
        <div class="message-item">
            <h2></h2>
            <p></p>
        </div>
    </div>
</div>

<style>
    .layer-photo-info {
        display: flex;
    }

    .photo-item {
        background-color: white;
        padding: 20px;
        width: 700px;
        height: 450px;
    }

    .photos{
        margin-left: 80px;
    }

    .info-item {
        position: absolute;
        background-color: white; 
        padding: 30px;
        width: 400px;
        height: 450px;
        margin-left: 745px;
    }

    .discription-item {
        position: absolute;
        background-color: white;
        padding: 20px;
        width: 700px;
        height: 450px;
    }

    .message-item{
        padding: 20px;
        background-color: white;
        width: 400px;
        height: 250px;
        margin-left: 745px;
        margin-top: 25px;
    }

    .time-item{
        font-size: 14px;
        color: lightslategray;
    }
</style>